@{
}

@model MoviesViewModel

<h3>Movies</h3>

@if (Model.Movies.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Movies</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model.Movies)
            {
                <tr>
                    <td> @movie.Name </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (!Model.Movies.Any())
{
    <p>We don't have any movies yet. </p>
}