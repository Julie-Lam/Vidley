@{
}

@model CustomersViewModel

<h3>Customers</h3>

@if (Model.Customers.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Customers</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {
                <tr>
                    <td> @Html.ActionLink(customer.Name, "Details", new { id = customer.Id }) </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (!Model.Customers.Any())
{
    <p>We don't have any customers yet. </p>
}